# eBay API Credentials
# Get these from: https://developer.ebay.com/my/keys
EBAY_CLIENT_ID=your_ebay_client_id
EBAY_CLIENT_SECRET=your_ebay_client_secret
EBAY_REFRESH_TOKEN=your_ebay_refresh_token

# Mercari Shops API Credentials (if using Mercari Shops)
# Get these from Mercari Shops seller portal
MERCARI_API_KEY=your_mercari_api_key
MERCARI_SHOP_ID=your_shop_id

# Mercari Automation Credentials (if NOT using Shops API)
# Use your regular Mercari account
MERCARI_EMAIL=your_mercari_email@example.com
MERCARI_PASSWORD=your_mercari_password

# OpenAI API Key (for GPT-4 Vision photo analysis)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key

# Anthropic API Key (for Claude listing enhancement)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Claude Model (optional - defaults to claude-3-haiku-20240307)
# Used for listing creation (attribute detection, descriptions)
# Available models (from fastest/cheapest to slowest/most expensive):
# - claude-3-haiku-20240307 (DEFAULT - fast, cheap, works with all API tiers)
# - claude-3-sonnet-20240229 (better quality, more expensive)
# - claude-3-opus-20240229 (best quality, most expensive)
# - claude-3-5-sonnet-20241022 (latest, but may not be available on all API tiers)
CLAUDE_MODEL=claude-3-haiku-20240307

# Claude Model for Collectible Identification (defaults to claude-3-sonnet-20240229)
# This needs better accuracy to properly identify valuable collectibles like trading cards
# Sonnet is recommended - Haiku often misses collectibles
CLAUDE_COLLECTIBLE_MODEL=claude-3-sonnet-20240229

# Optional: Default settings
AUTO_ENHANCE=true
USE_SANDBOX=false

# PhotoSync Configuration (for automatic photo syncing from phone)
# Path where PhotoSync saves photos from your phone
PHOTOSYNC_FOLDER=./images/new_items

# Automatically process photos from PhotoSync folder
AUTO_PROCESS_PHOTOS=false

# Email Notification Settings (for sale alerts, offers, failures)
# SMTP Configuration - Use your email provider's SMTP settings
# Gmail: smtp.gmail.com (port 587) - requires app password
# Outlook: smtp.office365.com (port 587)
# Yahoo: smtp.mail.yahoo.com (port 587 or 465)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_FROM_EMAIL=your_email@gmail.com
NOTIFICATION_TO_EMAIL=your_email@gmail.com
